
@{
    ViewBag.Title = "OracleDataView";
}

<h2>OracleDataView</h2>
<div class="row" ng-app="oracleTab">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light portlet-fit bordered" ng-controller="view">

            <div id="pick" class="col-lg-12" style="display:flex">
                <select  class="form-control select2" ng-model="table" ng-change="loadTables()">
                    <option ng-repeat="n in names" id="{{n.id}}" value="{{n.id}}">{{n.name}}</option>
                </select>
                <select id="singlet" class="form-control select2" >
                    <option id="" value=""></option>
                </select>
            </div>

            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <button id="sample_editable_1_new" class="btn green">
                                    Add New
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" contenteditable="true" id="sample_editable_1">
                    <thead>
                        <tr id="tableFields">
                            <th ng-repeat="c in columns"> {{c.val}}</th>
                        </tr>
                    </thead>
                    <tbody id="rows">
                        <tr ng-repeat="row in rows track by $index">
                            <td ng-repeat="field in row.value track by $index">{{field}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="portlet light portlet-fit bordered" ng-controller="graphics">
            <div class="portlet-title">
                <form novalidate>
                    <sections style="display:flex">
                        <label class="alert-info btn col-lg-2">Tipo de Grafica</label>
                        <label class="btn alert-info col-lg-2">Datos a Graficar</label>
                    </sections>
                    <section style="display:block">
                        <select class="select2-dropdown col-lg-2" ng-model="config.type" ng-change="show()" ng-options="typeOption for typeOption in typeOptions"></select>
                        <select multiple class="select2-dropdown col-lg-2" ng-model="value.heads" ng-options="head for head in heads" ng-change="show()" ></select>
                    </section>
                </form>

            </div>
            <div id="chart">



            </div>
        </div>
    </div>
</div>
@section Scripts{
<script src="~/scripts/jquery-ui.js"></script>
<script src="~/Scripts/checklist-model.js"></script>
<script src="~/Scripts/OracleCharts.js"></script> 
}